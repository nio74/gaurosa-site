# ==================== GAUROSA.IT - CONFIGURAZIONE ====================
# Copia questo file come .env e compila con i valori corretti
# NON committare il file .env su Git!

# ---- Database MySQL ----
# Sviluppo: localhost, Produzione: server Hostinger
DATABASE_URL="mysql://USERNAME:PASSWORD@HOST:3306/DATABASE_NAME"

# ---- MazGest API (Backend sincronizzazione) ----
# Sviluppo: http://localhost:5000
# Produzione: https://api.mazgest.org
MAZGEST_API_URL="http://localhost:5000"
MAZGEST_API_KEY="your-api-key-here"

# ---- JWT Secret ----
# Genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-jwt-secret-here"

# ---- Site URL ----
# Sviluppo: http://localhost:3001
# Produzione: https://gaurosa.it
NEXT_PUBLIC_SITE_URL="http://localhost:3001"

# ---- Email SMTP (Hostinger) ----
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="noreplay@gaurosa.it"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="noreplay@gaurosa.it"
EMAIL_FROM_NAME="Gaurosa Gioielli"

